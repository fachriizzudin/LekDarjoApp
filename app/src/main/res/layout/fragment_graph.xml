<?xml version="1.0" encoding="utf-8"?>


<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/blue"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:toolbarId="@+id/toolbar">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/backdrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/blue"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:src="@drawable/sidoarjo"
                app:layout_collapseMode="parallax" />


        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:behavior_overlapTop="64dp"
        app:layout_anchor="@id/appbar"
        android:focusable="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/economyGrowthCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <TextView
                        android:id="@+id/titleEconomyGrowth"
                        style="@style/Title"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="Pertumbuhan Ekonomi" />

                    <TextView
                        android:id="@+id/yearEconomyGrowth"
                        style="@style/Title"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_below="@+id/titleEconomyGrowth"
                        android:gravity="center"
                        android:text="2019" />

                    <LinearLayout
                        style="@style/Widget.CardContent"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_below="@+id/yearEconomyGrowth"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_economy_growth" />

                        <TextView
                            android:id="@+id/economyGrowthNewValue"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:autoSizeTextType="uniform"
                            android:gravity="center"
                            android:text=""
                            style="@style/Indicators"/>

                        <ImageView
                            android:id="@+id/upArrowEconomyGrowth"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_up" />

                    </LinearLayout>

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/totalPopulationCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <TextView
                        android:id="@+id/titleTotalPopulation"
                        style="@style/Title"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="Jumlah Penduduk" />

                    <TextView
                        android:id="@+id/yearTotalPopulation"
                        style="@style/Title"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_below="@+id/titleTotalPopulation"
                        android:gravity="center"
                        android:text="2019" />

                    <LinearLayout
                        style="@style/Widget.CardContent"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_below="@+id/yearTotalPopulation"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_population" />

                        <TextView
                            android:id="@+id/totalPopulationNewValue"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:autoSizeTextType="uniform"
                            android:gravity="center"
                            android:text=""
                            style="@style/Indicators"/>

                        <ImageView
                            android:id="@+id/upArrowTotalPopulation"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_up" />

                    </LinearLayout>

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/povertyCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <TextView
                        android:id="@+id/titlePoverty"
                        style="@style/Title"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="Persentase Penduduk Miskin" />

                    <TextView
                        android:id="@+id/yearPoverty"
                        style="@style/Title"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_below="@+id/titlePoverty"
                        android:gravity="center"
                        android:text="2019" />

                    <LinearLayout
                        style="@style/Widget.CardContent"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_below="@+id/yearPoverty"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_poverty" />

                        <TextView
                            android:id="@+id/povertyNewValue"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:autoSizeTextType="uniform"
                            android:gravity="center"
                            android:text=""
                            style="@style/Indicators"/>

                        <ImageView
                            android:id="@+id/upArrowPoverty"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_up" />

                    </LinearLayout>

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/unemploymentCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <TextView
                        android:id="@+id/titleUnemployment"
                        style="@style/Title"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="Tingkat Pengangguran Terbuka" />

                    <TextView
                        android:id="@+id/yearUnemployment"
                        style="@style/Title"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_below="@+id/titleUnemployment"
                        android:gravity="center"
                        android:text="2019" />

                    <LinearLayout
                        style="@style/Widget.CardContent"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_below="@+id/yearUnemployment"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_unemployment" />

                        <TextView
                            android:id="@+id/unemploymentNewValue"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:autoSizeTextType="uniform"
                            android:gravity="center"
                            android:text=""
                            style="@style/Indicators"/>

                        <ImageView
                            android:id="@+id/upArrowUnemployment"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_up" />

                    </LinearLayout>

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ipmCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <TextView
                        android:id="@+id/titleIpm"
                        style="@style/Title"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="Indeks Pembangunan Manusia" />

                    <TextView
                        android:id="@+id/yearIpm"
                        style="@style/Title"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_below="@+id/titleIpm"
                        android:gravity="center"
                        android:text="2018" />

                    <LinearLayout
                        style="@style/Widget.CardContent"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_below="@+id/yearIpm"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_ipm" />

                        <TextView
                            android:id="@+id/ipmNewValue"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:autoSizeTextType="uniform"
                            android:gravity="center"
                            android:text=""
                            style="@style/Indicators"/>

                        <ImageView
                            android:id="@+id/upArrowIpm"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_up" />

                    </LinearLayout>

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/riceProductionCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <TextView
                        android:id="@+id/titleRiceProduction"
                        style="@style/Title"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="Produksi Padi" />

                    <TextView
                        android:id="@+id/yearRiceProduction"
                        style="@style/Title"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_below="@+id/titleRiceProduction"
                        android:gravity="center"
                        android:text="2019" />


                    <LinearLayout
                        style="@style/Widget.CardContent"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_below="@+id/yearRiceProduction"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_production" />

                        <TextView
                            android:id="@+id/riceProductionNewValue"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:autoSizeTextType="uniform"
                            android:gravity="center"
                            android:text=""
                            style="@style/Indicators"/>

                        <ImageView
                            android:id="@+id/upArrowRiceProduction"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_up" />

                    </LinearLayout>

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/riceProductivityCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <TextView
                        android:id="@+id/titleRiceProductivity"
                        style="@style/Title"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="Produktivitas Padi" />

                    <TextView
                        android:id="@+id/yearRiceProductivity"
                        style="@style/Title"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_below="@+id/titleRiceProductivity"
                        android:gravity="center"
                        android:text="2018" />

                    <LinearLayout
                        style="@style/Widget.CardContent"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_below="@+id/yearRiceProductivity"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_agriculture" />

                        <TextView
                            android:id="@+id/riceProductivityNewValue"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:autoSizeTextType="uniform"
                            android:gravity="center"
                            android:text=""
                            style="@style/Indicators"/>

                        <ImageView
                            android:id="@+id/upArrowRiceProductivity"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_up" />

                    </LinearLayout>

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/horizontalProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="-7dp"
        android:indeterminate="true"
        app:layout_anchor="@id/appbar"
        app:layout_anchorGravity="top"
        android:visibility="gone"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>


